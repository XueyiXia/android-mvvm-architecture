<?xml version="1.0" encoding="utf-8"?>
<com.jetpack.mvvm.widget.slide.LinkScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="top"
            android:textSize="28dp"
            android:gravity="center"
            android:background="#22dd99"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ff9999"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffaa77"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ff9966"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffcc55"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ff99bb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ff77dd"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ff33bb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ff9999"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffaa77"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ff9966"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffcc55"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.jetpack.mvvm.widget.slide.LinkScrollView>