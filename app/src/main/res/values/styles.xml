<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--应用程序基础主题方案 Activity跳转动画效果:退出向右隐藏，进入向右弹出，启动另一个Activity时本页面不动 -->
    <style name="AppLoaderStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--标题栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--状态栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--导航栏标题字体颜色-->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!--窗口的背景颜色-->
        <item name="android:windowBackground">@color/default_background</item>
    </style>

    <!--启动页使用的Style-->
    <style name="SplashTheme" parent="@style/Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:background">@drawable/background_splash</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--ToolBar 字体主题Style-->
    <style name="CollapsingExpandedTitleTextAppearance" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_111111</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0dp</item>
    </style>


    <!--Activity 使用的主题-->
    <style name="ActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <!--标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--窗口的背景颜色-->
        <item name="android:windowBackground">@color/white</item>
        <!-- ToolBar 子标题字体颜色 -->
        <item name="actionMenuTextColor">@color/white</item>
        <!-- ToolBar溢出菜单的风格 -->
        <item name="actionOverflowMenuStyle">@style/ToolBarOverflowMenuStyle</item>
        <item name="android:textColor">@color/tool_bar_overflow_menu_text_color</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>


    <!--ToolBar溢出菜单样式-->
    <style name="ToolBarOverflowMenuStyle">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/white</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>

    </style>
</resources>